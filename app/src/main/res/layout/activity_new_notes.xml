<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backrepeat"
    tools:context="com.example.johnpham.hcftw.NewNotes">


    <!--<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3">-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:id="@+id/layout"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="New Event"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:weightSum="1">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="45dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:text="Date"
                    android:id="@+id/Datetext"
                    android:gravity="bottom" />

                <AutoCompleteTextView
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Date"
                    android:editable="true"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:hint="mm/dd/yyyy"
                    android:inputType="date" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1"
                android:id="@+id/first"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Title"
                    android:id="@+id/textView3"
                    android:gravity="bottom"
                    android:layout_weight="0.17" />

                <MultiAutoCompleteTextView
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:id="@+id/multiAutoCompleteTextView"
                    android:hint="Enter Title here"
                    android:gravity="bottom|right"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.73" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutAttendees"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Location"
                    android:id="@+id/Locationtext"
                    android:layout_gravity="bottom"
                    android:gravity="bottom" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editLocation"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:hint="Enter Location (NYI)"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutLocation"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Attendees"
                    android:id="@+id/textAtten"
                    android:gravity="bottom" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editAttendees"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="Enter Name (NYI)" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.14"
                android:id="@+id/second"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Start"
                    android:id="@+id/textView5"
                    android:gravity="bottom"
                    android:layout_gravity="bottom|left"
                    android:focusable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/timed"
                    android:layout_gravity="bottom|right"
                    android:gravity="bottom|right"
                    android:layout_weight="0.80"
                    android:editable="false"
                    android:focusable="false"/>

                <Button
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="Set Time"
                    android:id="@+id/time"
                    android:layout_weight="0.17"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:layout_gravity="bottom" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.14"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="End"
                    android:id="@+id/textView6"
                    android:gravity="bottom"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/timed1"
                    android:layout_weight="0.90"
                    android:gravity="bottom|right"
                    android:layout_gravity="bottom|right"
                    android:editable="false"
                    android:focusable="false"/>

                <Button
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:text="Set Time"
                    android:id="@+id/time1"
                    android:layout_weight="0.06"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:layout_gravity="bottom" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Notes"
                android:id="@+id/textView7"
                android:layout_weight="0.06" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_weight="0.34"
                android:editable="true"
                android:background="#ffd9d9d9"
                android:gravity="top"

                />

        </LinearLayout>
    <!--</ScrollView-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:background="#ff69706e">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/Create"
            android:layout_weight="0.28"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/Clear"
            android:layout_marginLeft="100dp"
            android:layout_weight="0.45"/>

    </LinearLayout>




</RelativeLayout>
